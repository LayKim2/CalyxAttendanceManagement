    protected override async Task OnInitializedAsync()
    {
        isLoading = true;

        await base.OnInitializedAsync();

        await AuthService.GetUsers();

        AuthService.OnChange += StateHasChanged;

        isLoading = false;
    }

    public void Dispose()
    {
        AuthService.OnChange -= StateHasChanged;
    }
